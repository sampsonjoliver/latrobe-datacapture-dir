<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText android:id="@+id/textMinNumber"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:inputType="number"
              android:hint="Minimum Number" />
    <EditText android:id="@+id/textMaxNumber"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:inputType="number"
              android:hint="Maximum Number" />
    <Spinner android:id="@+id/spinnerFrequency"
             android:layout_height="wrap_content"
             android:layout_width="match_parent" />
    <Button android:id="@+id/buttonStartService"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:onClick="startService"
            android:text="Start MainService"/>
    <Button android:id="@+id/buttonStopService"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:onClick="stopService"
            android:visibility="gone"
            android:text="Stop MainService"/>
    <TextView android:id="@+id/textResult"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20dp"/>
</LinearLayout>